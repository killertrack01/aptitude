@model Aptitude.Models.Department
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Home/userLayout.cshtml";
}
<!--Declare a CSS session-->
@section css{
    <style>
        .link-to-dealer button {
            background-color: #dc3545;
            border: none;
            transition: all ease-out 0.5s;
        }

            .link-to-dealer button:hover {
                cursor: pointer;
                transform: scale(1.1);
            }
    </style>
}<!--end /. Declare a CSS session-->
<br />
<!--container-->
<div class="container">
    <hr />
    <!--section.full-details-job-->
    <section class="full-details-job">
        <!--section.job-date-->
        <section class="job-date">
            <!--container-fluid-->
            <div class="container-fluid">
                <!--row-->
                <div class="row">
                    <!--col-lg-12-->
                    <div class="col-lg-12">
                        <!--card-->
                        <div class="card">
                            <!--card-header-->
                            <div class="card-header" style="text-align:center; color:red">
                                <h2 class="card-text">@Html.DisplayFor(model => model.Name)</h2>
                            </div> <!--/.card-header-->
                        </div><!--/.card-->
                    </div> <!--/.col-lg-12-->
                </div><!--/.row-->
                <br />
            </div>  <!--/.container-fluid-->
        </section> <!--/.section.job-date-->
        <hr />
        <!--section.work-details-->
        <section class="work-details">
            <!--row-->
            <div class="row">
                <!--col-lg-6 col-md-6 col-sm-12 col-xs-12-->
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <!--card-->
                    <div class="card">
                        <!--card-body-->
                        <div class="card-body">
                            <!--p.card-text-->
                            <p class="card-text">
                                <i class="fa fa-fw fa-star"></i>Offered Salary<i class="fa fa-fw fa-star"></i>
                                <hr />
                                <strong><i class="fa fa-fw fa-money"></i>@Html.DisplayFor(model => model.Salary)</strong>
                            </p>  <!--/p.card-text-->
                        </div>  <!--/.card-body-->
                    </div><!--/.card-->
                    <br />
                    <!--card-->
                    <div class="card">
                        <!--card-body-->
                        <div class="card-body">
                            <!--p.card-text-->
                            <p class="card-text">
                                <i class="fa fa-fw fa-star"></i>Work content<i class="fa fa-fw fa-star"></i>
                                <hr />
                                <strong><i class="fa fa-fw fa-file-text"></i>@Html.Raw(Model.Detail)</strong>
                            </p><!--/p.card-text-->
                        </div> <!--/.card-body-->
                    </div><!--/.card-->
                    <br />
                    <!--card-->
                    <div class="card">
                        <!--card-body-->
                        <div class="card-body">
                            <!--p.card-text-->
                            <p class="card-text">
                                <h4><i class="fa fa-fw fa-star"></i>Income and regime<i class="fa fa-fw fa-star"></i></h4>
                                <hr />
                                <strong><i class="fa fa-fw fa-child"></i>@Html.Raw(Model.Welfare)</strong>
                            </p> <!--/p.card-text-->
                        </div><!--/.card-body-->
                    </div><!--/.card-->
                </div>  <!--/.col-lg-6 col-md-6 col-sm-12 col-xs-12-->
                <!--col-lg-6 col-md-6 col-sm-12 col-xs-12-->
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <!--card-->
                    <div class="card">
                        <!--card-body-->
                        <div class="card-body">
                            <!--p.card-text-->
                            <p class="card-text">
                                <i class="fa fa-fw fa-star"></i>Work location<i class="fa fa-fw fa-star"></i>
                                <hr />
                                <strong><i class="fa fa-fw fa-flag-checkered"></i>@Html.DisplayFor(model => model.Location)</strong>
                            </p><!--/p.card-text-->
                        </div><!--/.card-body-->
                    </div><!--/.card-->
                    <br />
                    <!--card-->
                    <div class="card">
                        <!--card-body-->
                        <div class="card-body">
                            <!--p.card-text-->
                            <p class="card-text">
                                <i class="fa fa-fw fa-star"></i>Job requirements<i class="fa fa-fw fa-star"></i>
                                <hr />
                                <strong><i class="fa fa-fw fa-question-circle-o"></i>@Html.Raw(Model.Requirement)</strong>
                            </p><!--/p.card-text-->
                        </div><!--/.card-body-->
                    </div><!--/.card-->
                    <br />
                </div>  <!--/.col-lg-6 col-md-6 col-sm-12 col-xs-12-->
            </div><!--/.row-->
            <br />
            <!--row-->
            <div class="row">
                <div class="col-md-3"></div>
                <!--col-md-6-->
                <div class="col-md-6">
                    <!--link-to-dealer-->
                    <div class="link-to-dealer">
                        <button type="button" class="btn-lg btn-block"><a asp-action="FormCV" asp-route-id="@Model.Id">Apply Now</a></button>
                    </div> <!--/.link-to-dealer-->
                </div><!--/.col-md-6-->
                <br />
                <div class="col-md-3"></div>
            </div><!--/.row-->
        </section> <!--/.section.work-details-->
    </section>    <!--/.section.full-details-job-->
</div><!--/.container-->