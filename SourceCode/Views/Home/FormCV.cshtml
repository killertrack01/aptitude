@model Aptitude.Models.CV
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Home/userLayout.cshtml";
}
@section css{
}
<hr />
<!--container-fluid-->
<div class="container-fluid">
    <!--section.main-content-form-cv-->
    <section class="main-content-form-cv">
        <!--container-fluid-->
        <div class="container-fluid">
            <!--row-->
            <div class="row">
                <!--col-lg-12 col-md-12 col-sm-12 col-xs-12-->
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <!--card-->
                    <div class="card">
                        <!--card-header-->
                        <div class="card-header" style="text-align:center">
                            <h1 style="color:brown">Curriculum Vitae</h1>
                        </div>   <!--/.card-header-->
                    </div><!--/.card-->
                </div> <!--/.col-lg-12 col-md-12 col-sm-12 col-xs-12-->
            </div><!--/.row-->
        </div><!--/.container-fluid-->
        <br />
        <!--section.form-cv-->
        <section class="form-cv">
            <!--row-->
            <div class="row">
                <!--container-->
                <div class="container">
                    <!--form-->
                    @using (Html.BeginForm("FormCV", "Home", FormMethod.Post))
                    {
                        <!--row-->
                    <div class="row">
                        <!--col-lg-6 col-md-6 col-sm-12 col-xs-12-->
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                            <!--card-->
                            <div class="card">
                                <!--card-header-->
                                <div class="card-header" style="text-align:center; color:peru">
                                    <h3>Personal Information</h3>
                                </div> <!--/.card-header-->
                                <input type="hidden" name="depid" value="@ViewBag.dep" />
                                <input type="hidden" name="cvdate" value="@DateTime.Now" />
                                <!--card-body-->
                                <div class="card-body">
                                    <!--form-group-->
                                    <div class="form-group">
                                        <label><b>First Name</b></label>
                                        <input type="text" class="form-control" asp-for="FirstName">
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div> <!--/.form-group-->
                                    <!--form-group-->
                                    <div class="form-group">
                                        <label><b>Last Name</b></label>
                                        <input type="text" class="form-control" asp-for="LastName">
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div> <!--/.form-group-->
                                    <!--form-group-->
                                    <div class="form-group">
                                        <label><b>Email address</b></label>
                                        <input type="email" class="form-control" asp-for="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div> <!--/.form-group-->
                                    <!--form-group-->
                                    <div class="form-group">
                                        <label><b>Laguage</b></label>
                                        <input type="text" class="form-control" asp-for="Language">
                                        <span asp-validation-for="Language" class="text-danger"></span>
                                    </div> <!--/.form-group-->
                                </div> <!--/.card-body-->
                            </div> <!--/.card-->
                            <br />
                            <!--card-->
                            <div class="card">
                                <!--card-header-->
                                <div class="card-header" style="text-align:center; color:peru">
                                    <h3>Education</h3>
                                </div> <!--/.card-header-->
                                <!--card-body-->
                                <div class="card-body">
                                    <!--form-group-->
                                    <div class="form-group">
                                        <label><b>University</b></label>
                                        <input type="text" class="form-control" asp-for="University">
                                        <span asp-validation-for="University" class="text-danger"></span>
                                    </div><!--/.form-group-->
                                    <!--form-group-->
                                    <div class="form-group">
                                        <label><b>Mark</b></label>
                                        <input type="number" class="form-control" asp-for="Mark">
                                        <span asp-validation-for="Mark" class="text-danger"></span>
                                    </div><!--/.form-group-->
                                </div> <!--/card-body-->
                            </div> <!--/.card-->
                        </div><!--/.col-lg-6 col-md-6 col-sm-12 col-xs-12-->
                        <!--col-lg-6 col-md-6 col-sm-12 col-xs-12-->
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                            <!--card-->
                            <div class="card">
                                <!--card-header-->
                                <div class="card-header" style="text-align:center; color:peru">
                                    <h3>Personal Details</h3>
                                </div> <!--/.card-header-->
                            </div>  <!--/.card-->
                            <br />
                            <!--card-->
                            <div class="card">
                                <!--card-body-->
                                <div class="card-body">
                                    <!--form-group-->
                                    <div class="form-group">
                                        <label><b>Description</b></label>
                                        <textarea class="form-control" rows="3" asp-for="PersonalDetail"></textarea>
                                        <span asp-validation-for="PersonalDetail" class="text-danger"></span>
                                    </div><!--/.form-group-->
                                    <!--form-group-->
                                    <div class="form-group">
                                        <label><b>Advantage</b></label>
                                        <input type="text" class="form-control" asp-for="Advantage">
                                        <span asp-validation-for="Advantage" class="text-danger"></span>
                                    </div><!--/.form-group-->
                                    <!--form-group-->
                                    <div class="form-group">
                                        <label><b>Disadvantage</b></label>
                                        <input type="text" class="form-control" asp-for="Disadvantage">
                                        <span asp-validation-for="Disadvantage" class="text-danger"></span>
                                    </div><!--/.form-group-->
                                    <!--form-group-->
                                    <div class="form-group">
                                        <label><b>Hobby</b></label>
                                        <input type="text" class="form-control" asp-for="Hobby">
                                        <span asp-validation-for="Hobby" class="text-danger"></span>
                                    </div><!--/.form-group-->
                                </div> <!--/.card-body-->
                            </div>  <!--/.card-->
                            <br />
                            <!--card-->
                            <div class="card">
                                <!--card-header-->
                                <div class="card-header" style="text-align:center; color:peru ">
                                    <h3>Work Experience</h3>
                                </div>  <!--/.card-header-->
                                <!--card-body-->
                                <div class="card-body">
                                    <!--form-group-->
                                    <div class="form-group">
                                        <label><b>Project</b></label>
                                        <textarea class="form-control" rows="3" asp-for="Project"></textarea>
                                        <span asp-validation-for="Project" class="text-danger"></span>
                                    </div><!--/.form-group-->
                                    <!--form-group-->
                                    <div class="form-group">
                                        <label><b>Last Position</b></label>
                                        <input type="text" class="form-control" asp-for="LastPostion">
                                        <span asp-validation-for="LastPostion" class="text-danger"></span>
                                    </div><!--/.form-group-->
                                    <!--form-group-->
                                    <div class="form-group">
                                        <label><b>Experience</b></label>
                                        <input type="text" class="form-control" asp-for="Experience">
                                        <span asp-validation-for="Experience" class="text-danger"></span>
                                    </div><!--/.form-group-->
                                </div> <!--/.card-body-->
                            </div>  <!--/.card-->
                        </div><!--/.col-lg-6 col-md-6 col-sm-12 col-xs-12-->
                    </div><!--/.row-->
                        <!--row-->
                <div class="row">
                    <div class="col-md-4">
                    </div>
                    <!--col-md-4-->
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Apply</button>
                    </div>  <!--/.col-md-4-->
                    <div class="col-md-4"></div>
                </div><!--/.row-->
                    }   <!--/.form-->
                </div><!--/.container-->
            </div><!--/.row-->
        </section> <!--/.section.form-cv-->
    </section> <!--/.section.main-content-form-cv-->
</div><!--/.container-fluid-->
<hr />