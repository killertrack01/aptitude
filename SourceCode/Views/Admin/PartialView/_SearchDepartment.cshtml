@model IEnumerable<Aptitude.Models.Department>
    <div class="form-row">
        <div class="form-group col-lg-3"></div>
        <div class="form-group col-lg-6">
            <select name="Search" class="form-control">
                <option selected value="@ViewBag.Default">Select department</option>
                @foreach (var item in ViewBag.Depart)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
        <div class="form-group col-lg-3">
            <input type="text" class="btn btn-outline-secondary" style="max-width:100%" value="Search"/>
        </div>
    </div>    