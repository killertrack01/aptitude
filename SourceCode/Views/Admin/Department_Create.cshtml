@model Aptitude.Models.Department
@{
    ViewData["Title"] = "Department_Create";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}
@section CSS{
    <link href="~/css/thanhcss.css" rel="stylesheet" />
}
<div class="container">
    <div class="card body-depart">
        <div class="card-body">
            <!--Title-->
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="text-center"><b>Create New Department</b></h3>
                </div>
            </div>
            <!---Form Create-->
            <div class="row">
                <div class="col-lg-12">
                    <form asp-action="Department_Create" asp-controller="Admin" method="post">
                        <partial name="PartialView/_CreateUpdateDepart" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            // Summernote
            $('.depart-ck').summernote({
                toolbar: [
                    // [groupName, [list of button]]
                    ['style', ['bold', 'italic', 'underline', 'clear']],
                    ['font', ['strikethrough', 'superscript', 'subscript']],
                    ['fontsize', ['fontsize']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol']],
                    ['height', ['height']]
                ]
            })
        })</script>
}